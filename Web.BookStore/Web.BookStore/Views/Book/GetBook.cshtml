@model Book;
@{
    ViewData["Title"] = "GetBook";
    IEnumerable<Book> similarBooks = ViewData["Books"] as IEnumerable<Book>;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/img1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/img2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/img3.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <ul class="list-group">
                <li>Title: @Model.Title</li>
                <li>Author: @Model.Author</li>
                <li>Description: @Model.Description</li>
            </ul>
        </div>
    </div>
</div>

<hr />

<div class="container" id="divsimilarbooks">
    <h4>Similar books with tags: @Model.Tags</h4>
    <div class="row">
        @foreach (Book book in similarBooks)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="" class="img-thumbnail" />
                    <div class="card-body">
                        <h3 class="card-title">@(string.IsNullOrEmpty(book.Title) ? "Name is not available" : book.Title)</h3>
                        <p class="card-text">@(string.IsNullOrEmpty(book.Description) ? "Description is not availabe" : book.Description)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id"
                                   class="btn btn-sm btn-outline-secondary">View details</a>
                                @* href="/book/getbook/@book.Id" *@
                            </div>
                            <small class="text-muted">@(string.IsNullOrEmpty(book.Author) ? "NA" : book.Author)</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>